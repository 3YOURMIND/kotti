{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"paths": {
			"@/*": ["./*"],
			"~/*": ["./*"]
		},
		"resolveJsonModule": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2018",
		"types": ["node", "@nuxt/types"]
	},
	"exclude": ["node_modules"],
	"include": [
		"../kotti-ui/source/data.json",
		"./**/*.ts",
		"./**/*.tsx",
		"./**/*.js",
		"./**/*.jsx",
		"./**/*.vue"
	]
}
