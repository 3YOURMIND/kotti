{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"composite": true,
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "ES2019"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "dist",
		"resolveJsonModule": true,
		"rootDir": "source",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
	},
	"exclude": ["node_modules", "dist"],
	"include": ["source/*.ts", "source/**/*.ts"]
}
