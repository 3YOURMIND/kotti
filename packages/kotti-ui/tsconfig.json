{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"experimentalDecorators": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable", "ES2019", "ES2020"],
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"jsx": "react",
		"jsxFactory": "h",
		"skipLibCheck": true,
		"target": "esnext",
		"rootDir": "source"
	},
	"exclude": ["node_modules", "dist"],
	"include": [
		"source/*.ts",
		"source/**/*.ts",
		"source/**/*.tsx",
		"source/**/*.js",
		"source/**/*.jsx",
		"source/**/*.vue"
	]
}
