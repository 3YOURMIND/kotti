{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"outDir": "dist",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"jsx": "react",
		"jsxFactory": "h",
		// FIXME: remove skipLibCheck when [https://github.com/ElemeFE/element/issues/17329] is resolved
		"skipLibCheck": true,
		"target": "esnext",
		"rootDir": "source"
	},
	"exclude": ["node_modules", "dist"],
	"include": [
		"source/**/*.ts",
		"source/**/*.tsx",
		"source/**/*.js",
		"source/**/*.jsx",
		"source/**/*.vue"
	]
}
