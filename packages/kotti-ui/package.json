{
	"author": "3YOURMIND GmbH",
	"browserslist": [
		"defaults"
	],
	"bugs": {
		"url": "https://github.com/3YOURMIND/kotti/issues"
	},
	"dependencies": {
		"@3yourmind/vue-use-tippy": "2.x",
		"@3yourmind/yoco": "^2.4.6",
		"big.js": "^6.1.1",
		"deep-eql": "^4.0.0",
		"deepmerge": "^4.2.2",
		"element-ui": "2.13.1",
		"filesize": "^8.0.6",
		"lodash": "^4.17.19",
		"normalize.css": "^8.0.1",
		"shortid": "^2.2.15",
		"tippy.js": "6.x",
		"ts-custom-error": "^3.1.1",
		"vue-clickaway": "^2.2.2",
		"zod": "3.x"
	},
	"description": "Kotti Vue Component UI",
	"devDependencies": {
		"@3yourmind/sass-node-modules-importer": "*",
		"@babel/plugin-transform-runtime": "^7.15.0",
		"@babel/runtime": "^7.15.4",
		"@rollup/plugin-babel": "^6.0.4",
		"@rollup/plugin-commonjs": "25.0.7",
		"@rollup/plugin-json": "^6.0.1",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-typescript": "^11.1.5",
		"@types/big.js": "^6.1.1",
		"@types/jest": "^27.0.1",
		"@types/lodash": "^4.14.157",
		"@types/shortid": "^0.0.29",
		"@vue/test-utils": "^1.0.3",
		"esm": "^3.2.25",
		"postcss-flexbugs-fixes": "^4.2.0",
		"postcss-preset-env": "^6.7.0",
		"rollup": "^3.29.4",
		"rollup-plugin-scss": "^3.0.0",
		"rollup-plugin-visualizer": "^5.9.2",
		"rollup-plugin-vue": "^5.1.9",
		"unplugin-vue-jsx": "^0.2.2"
	},
	"files": [
		"dist"
	],
	"homepage": "https://github.com/3YOURMIND/kotti#readme",
	"license": "MIT",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"name": "@3yourmind/kotti-ui",
	"peerDependencies": {
		"@vue/composition-api": "1.7.1",
		"core-js": "*",
		"vue": "^2.2.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/3YOURMIND/kotti.git"
	},
	"scripts": {
		"build": "rm -rf dist && yarn run build:tokens && yarn run build:kotti && yarn run build:scss-variables",
		"build:kotti": "concurrently \"yarn run build:kotti:cjs\" \"yarn run build:kotti:esm\"",
		"build:kotti:cjs": "rollup -c rollup.config.js --bundleConfigAsCjs --environment MODULE:cjs",
		"build:kotti:cjs:visualizer": "rollup -c rollup.config.js --bundleConfigAsCjs --environment MODULE:cjs --environment ENABLE_VISUALIZER:true",
		"build:kotti:esm": "rollup -c rollup.config.js --bundleConfigAsCjs --environment MODULE:esm",
		"build:kotti:esm:visualizer": "rollup -c rollup.config.js --bundleConfigAsCjs --environment MODULE:esm --environment ENABLE_VISUALIZER:true",
		"build:scss-variables": "cp source/kotti-style/_variables.scss dist/variables.scss",
		"build:tokens": "node -r esm tokens/generate.js && prettier --write source/kotti-style/tokens.css",
		"check:es5": "es-check es5 './dist/cjs/*.js'",
		"check:unimported": "unimported --no-cache",
		"format": "prettier --write '**/*.{vue,js,json,jsx,ts,tsx,md}'",
		"watch": "rollup -wc rollup.config.js --bundleConfigAsCjs"
	},
	"sideEffects": [
		"dist/styles.css"
	],
	"style": "dist/styles.css",
	"types": "dist/esm/index.d.ts",
	"version": "5.3.3"
}
