{
	"entry": ["source/index.ts"],
	"extensions": [".js", ".jsx", ".ts", ".tsx", ".vue"],
	"ignorePatterns": ["**/node_modules/**", "**/dist/**"],
	"ignoreUnimported": [
		"**/*.test.ts",
		"**/tests.ts",
		"**/*.d.ts",
		"**/tokens/**",
		"rollup.config.js",
		"source/test-utils/**"
	],
	"ignoreUnused": ["core-js", "jest", "normalize.css"]
}
