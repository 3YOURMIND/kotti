{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"importHelpers": true,
		"jsx": "react",
		"jsxFactory": "h",
		"lib": [
			"dom.iterable",
			"dom",
			"esnext.asynciterable",
			"esnext",
			"scripthost"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "dist",
		"paths": {
			"@/*": ["./*"],
			"~/*": ["./*"]
		},
		"resolveJsonModule": true,
		// FIXME: remove skipLibCheck when [https://github.com/ElemeFE/element/issues/17329] is resolved
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"types": ["webpack-env", "node", "@nuxt/types", "jest"]
	},
	"exclude": ["node_modules", "dist"],
	"include": [
		"packages/**/*.ts",
		"packages/**/*.tsx",
		"packages/**/*.js",
		"packages/**/*.jsx",
		"packages/**/*.vue"
	]
}
