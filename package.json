	"description": "Kotti Vue Component UI",
	"devDependencies": {
		"@babel/core": "^7.1.6",
		"@babel/plugin-proposal-object-rest-spread": "^7.0.0",
		"@babel/plugin-transform-runtime": "^7.1.0",
		"@nuxtjs/axios": "^5.3.6",
		"@nuxtjs/markdownit": "^1.2.0",
		"@nuxtjs/markdownit-loader": "^1.1.1",
		"@vue/cli-plugin-babel": "^3.1.1",
		"@vue/cli-plugin-typescript": "^3.1.1",
		"@vue/cli-plugin-unit-jest": "^3.1.1",
		"@vue/cli-service": "^3.1.1",
		"@vue/eslint-config-prettier": "^4.0.1",
		"cross-env": "^5.2.0",
		"eslint": "^5.9.0",
		"eslint-config-prettier": "^3.3.0",
		"eslint-loader": "^2.1.0",
		"eslint-plugin-vue": "^4.7.1",
		"gulp": "latest",
		"gulp-autoprefixer": "^6.0.0",
		"gulp-clean-css": "^4.0.0",
		"gulp-csscomb": "^3.0.8",
		"gulp-rename": "^1.4.0",
		"gulp-sass": "^4.0.2",
		"husky": "^1.2.0",
		"lint-staged": "^8.1.0",
		"node-sass": "^4.10.0",
		"nuxt": "^2.3.4",
		"prettier": "^1.15.2",
		"sass-loader": "^7.1.0",
		"typescript": "^3.0.0",
		"vue-clipboard2": "^0.2.1"
	},
	"eslintConfig": {
		"extends": [
			"plugin:vue/essential",
			"@vue/prettier"
		],
		"root": true,
		"rules": {
			"no-debugger": 0
		}
	},
	"files": [
		"dist",
		"packages"
	],
	"license": "MIT",
	"lint-staged": {
		"*.{js,json,css,scss,md,vue}": [
			"prettier --write",
			"git add"
		]
	},
	"main": "/dist/kotti-ui.common.js",
	"name": "@3yourmind/kotti-ui",
	"prettier": {
		"proseWrap": "always",
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true
	},
	"scripts": {
		"build": "vue-cli-service build --target lib --name KottiUI src/index.js",
		"build:doc": "nuxt generate -c build/nuxt.config.js",
		"build:gh-pages": "DEPLOY_ENV=GH_PAGES nuxt generate -c build/nuxt.config.js",
		"build:style": "yarn gulp build --gulpfile ./build/gulpstyle.js",
		"deploy:docs": ". github-deploy.sh",
		"dev:docs": "nuxt -c build/nuxt.config.js",
		"postpublish": "git tag versions/kotti/$(node -p \"require('./package.json').version\") && git push --tags",
		"precommit": "lint-staged",
		"prepublishOnly": "yarn build:style && yarn build:kotti"
	},
	"style": "/dist/kotti-style/index.min.css",
	"version": "0.0.14"
}
