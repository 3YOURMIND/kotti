{
	"name": "@3yourmind/kotti",
	"description": "Kotti Vue Component UI",
	"version": "0.0.1",
	"author": "3YOURMIND GmbH",
	"license": "MIT",
	"scripts": {
		"doc": "nuxt -c build/nuxt.config.js",
		"doc:build": "nuxt build",
		"doc:start": "nuxt start",
		"doc:generate": "nuxt generate",
		"doc:gh-pages": "DEPLOY_ENV=GH_PAGES nuxt generate",
		"doc:deploy": "push-dir --dir=dist --branch=gh-pages --cleanup",
		"storybook": "start-storybook -p 9001 -c .storybook",
		"build:component": "node build/component",
		"storybook:build": "build-storybook -c .storybook -o dist/storybook",
		"deploy":
			"node -v && nuxt generate && build-storybook -c .storybook -o dist/storybook",
		"deploy:cleanbuild":
			"rm -r dist && nuxt generate && build-storybook -c .storybook -o dist/storybook",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,json,css,scss,md,vue}": ["prettier --write", "git add"]
	},
	"dependencies": {
		"@3yourmind/yoco": "^0.0.3",
		"nuxt": "^1.3.0",
		"vue": "^2.5.9",
		"vue-clipboard2": "^0.0.8"
	},
