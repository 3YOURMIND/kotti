	"files": [
		"dist",
		"packages/kotti-style/_variables.scss"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"license": "MIT",
	"lint-staged": {
		"*.{css,scss,vue}": [
			"stylelint --fix"
		],
		"*.{js,jsx,vue,ts,tsx}": [
			"eslint --fix"
		],
		"*.{json,md}": [
			"prettier --write"
		]
	},
	"main": "dist/KottiUI.umd.js",
	"name": "@3yourmind/kotti-ui",
	"scripts": {
		"build:gh-pages": "DEPLOY_ENV=GH_PAGES nuxt generate",
		"build:kotti": "vue-cli-service build --target lib --name KottiUI packages/index.js",
		"check:script": "eslint --ignore-path .gitignore '**/*.{js,vue}'",
		"check:style": "stylelint **/*.{css,scss,vue}",
		"deploy:docs": "./github-deploy.sh",
		"dev:docs": "nuxt",
		"format:docs": "prettier --write **/*.md",
		"lint:script": "eslint --fix --ignore-path .gitignore '**/*.{js,vue}'",
		"lint:style": "stylelint --fix **/*.{css,scss,vue}",
		"postpublish": "git tag -f v$(node -p \"require('./package.json').version\") && git push origin v$(node -p \"require('./package.json').version\")",
		"prepublishOnly": "yarn run build:kotti"
	},
	"style": "dist/KottiUI.css",
	"version": "1.9.10"
}
