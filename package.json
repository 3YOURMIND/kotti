{
	"author": "3YOURMIND GmbH",
	"bolt": {
		"workspaces": [
			"packages/*"
		]
	},
	"dependencies": {
		"@3yourmind/yoco": "^0.0.4",
		"nuxt": "^1.3.0",
		"vue": "^2.5.9",
		"vue-clipboard2": "^0.0.8"
	},
	"description": "Kotti Vue Component UI",
	"devDependencies": {
		"@nuxtjs/markdownit": "^1.2.0",
		"@nuxtjs/markdownit-loader": "^1.1.1",
		"@vue/eslint-config-prettier": "^3.0.0-rc.3",
		"autoprefixer": "^8.3.0",
		"babel-core": "^6.26.0",
		"babel-eslint": "^7.2.3",
		"babel-loader": "^7.1.2",
		"babel-preset-env": "^1.6.0",
		"babel-preset-stage-3": "^6.24.1",
		"bolt": "^0.20.6",
		"cross-env": "^5.0.5",
		"css-loader": "^0.28.7",
		"cssnano": "^3.10.0",
		"eslint": "^4.17.0",
		"eslint-config-standard": "^10.2.1",
		"eslint-loader": "^1.9.0",
		"eslint-plugin-html": "^3.2.2",
		"eslint-plugin-import": "^2.8.0",
		"eslint-plugin-node": "^5.2.1",
		"eslint-plugin-promise": "^3.6.0",
		"eslint-plugin-standard": "^3.0.1",
		"eslint-plugin-vue": "^4.5.0",
		"file-loader": "^1.1.4",
		"gulp": "latest",
		"gulp-autoprefixer": "latest",
		"gulp-clean-css": "^3.7.0",
		"gulp-csscomb": "^3.0.8",
		"gulp-rename": "^1.2.2",
		"gulp-sass": "latest",
		"husky": "^0.14.3",
		"lint-staged": "^7.0.4",
		"markdown-it-anchor": "^4.0.0",
		"markdown-it-container": "^2.0.0",
		"node-sass": "^4.9.0",
		"postcss-cssnext": "^3.1.0",
		"postcss-import": "^11.1.0",
		"postcss-loader": "^2.1.4",
		"prettier": "^1.13.7",
		"push-dir": "^0.4.1",
		"sass-loader": "^7.0.1",
		"stylelint": "^9.1.3",
		"stylelint-config-recommended-scss": "^3.1.0",
		"stylelint-scss": "^2.5.0",
		"sugarss": "^1.0.1",
		"vue-loader": "^14.2.2",
		"vue-markdown-loader": "^2.4.1",
		"vue-server-renderer": "^2.5.13",
		"vue-template-compiler": "^2.5.13 ",
		"webpack": "^4.5.0",
		"webpack-cli": "^2.1.2",
		"webpack-dev-server": "^2.9.1",
		"webpack-merge": "^4.1.2"
	},
	"eslintConfig": {
		"extends": [
			"plugin:vue/essential",
			"@vue/prettier"
		],
		"root": true,
		"rules": {
			"no-debugger": 0
		}
	},
	"license": "MIT",
	"lint-staged": {
		"*.{js,json,css,scss,md,vue}": [
			"prettier --write",
			"git add"
		]
	},
	"name": "@3yourmind/kotti",
	"prettier": {
		"overrides": [
			{
				"files": ".prettierrc",
				"options": {
					"parser": "json"
				}
			},
			{
				"files": "*.md",
				"options": {
					"parser": "markdown"
				}
			}
		],
		"proseWrap": "always",
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "es5",
		"useTabs": true
	},
	"scripts": {
		"build:kotti": "rm -f src/dist/* && NODE_ENV=production webpack --config build/component.js --progress",
		"build:style": "yarn gulp build --gulpfile ./build/gulpstyle.js",
		"doc": "nuxt -c build/nuxt.config.js",
		"doc:deploy": "push-dir --dir=gh-pages --branch=gh-pages --cleanup",
		"doc:generate": "nuxt generate -c build/nuxt.config.js",
		"doc:gh-pages": "DEPLOY_ENV=GH_PAGES nuxt generate -c build/nuxt.config.js",
		"precommit": "lint-staged",
		"watch:style": "yarn gulp watch --gulpfile ./build/gulpstyle.js"
	},
	"version": "0.0.1"
}
