		"@storybook/addon-links": "^3.4.1",
		"@storybook/addon-notes": "^3.4.1",
		"@storybook/addon-storysource": "^3.4.1",
		"@storybook/addon-viewport": "^3.4.2",
		"@storybook/vue": "^3.4.1",
		"autoprefixer": "^8.3.0",
		"babel-core": "^6.26.0",
		"babel-eslint": "^7.2.3",
		"babel-loader": "^7.1.2",
		"babel-preset-env": "^1.6.0",
		"babel-preset-stage-3": "^6.24.1",
		"bolt": "^0.20.6",
		"cross-env": "^5.0.5",
		"css-loader": "^0.28.7",
		"cssnano": "^3.10.0",
		"eslint": "^4.17.0",
		"eslint-config-standard": "^10.2.1",
