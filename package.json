		"dist",
		"packages/kotti-style/_variables.scss"
	],
	"license": "MIT",
	"lint-staged": {
		"*.{json,md}": [
			"prettier --write",
			"git add"
		],
		"*.{vue,css,scss}": [
			"stylelint --fix",
			"git add"
		],
		"*.{vue,js}": [
			"eslint --fix",
			"git add"
		]
	},
	"main": "dist/KottiUI.umd.js",
	"name": "@3yourmind/kotti-ui",
	"prettier": {
		"proseWrap": "always",
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true
	},
	"scripts": {
		"build:gh-pages": "DEPLOY_ENV=GH_PAGES nuxt generate",
		"build:kotti": "vue-cli-service build --target lib --name KottiUI packages/index.js",
		"deploy:docs": ". github-deploy.sh",
		"dev:docs": "nuxt",
		"precommit": "lint-staged",
		"prepublishOnly": "yarn run build:kotti",
		"check:script": "eslint packages/**/*.{js,vue}",
		"lint:script": "eslint --fix packages/**/*.{js,vue}",
		"check:style": "stylelint packages/**/*.{css,scss,vue}",
		"lint:style": "stylelint --fix packages/**/*.{css,scss,vue}"
	},
	"style": "dist/KottiUI.css",
	"version": "1.7.6"
}
