{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["tsconfig.json", "yarn.lock"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputLogs": "new-only"
		},
		"check": {
			"dependsOn": [
				"check:eslint",
				"check:knip",
				"check:prettier",
				"check:publint",
				"check:stylelint"
			]
		},
		"check:eslint": {
			"dependsOn": ["@3yourmind/eslint-config#build", "^build"],
			"env": ["TIMING"],
			"inputs": ["**/*.{js,json,ts,vue}", "../../eslint.config.mjs"],
			"outputLogs": "new-only"
		},
		"check:knip": {
			"outputLogs": "new-only"
		},
		"check:prettier": {
			"inputs": ["**/*.{css,js,json,md,scss,ts,vue}", "../../.prettierignore"],
			"outputLogs": "new-only"
		},
		"check:publint": {
			"dependsOn": ["build"],
			"inputs": ["dist/**", "package.json"],
			"outputLogs": "new-only"
		},
		"check:stylelint": {
			"inputs": ["**/*.{css,scss,vue}"],
			"outputLogs": "new-only"
		},
		"fix": {
			"dependsOn": ["fix:eslint", "fix:prettier", "fix:stylelint"]
		},
		"fix:eslint": {
			"dependsOn": ["@3yourmind/eslint-config#build", "^build"],
			"env": ["TIMING"],
			"inputs": ["**/*.{js,json,ts,vue}", "../../eslint.config.mjs"],
			"outputLogs": "new-only"
		},
		"fix:prettier": {
			"inputs": ["**/*.{css,js,json,md,scss,ts,vue}", "../../.prettierignore"],
			"outputLogs": "new-only"
		},
		"fix:stylelint": {
			"inputs": ["**/*.{css,scss,vue}"],
			"outputLogs": "new-only"
		},
		"publish-package": {
			"cache": false,
			"dependsOn": ["build", "check", "test"]
		},
		"test": {},
		"watch": {
			"cache": false,
			"persistent": true
		}
	}
}
